<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <android.opengl.GLSurfaceView
            android:background="@color/white"
            android:id="@+id/glview_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:background="@drawable/textview"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:text="正在视频直播"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
  <TextView
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="20dp"
      android:padding="5dp"
      android:textColor="#fcff00"
      android:background="@drawable/textview"
      android:layout_above="@+id/my_list"
    android:text="系统公告：请使用文明用语共同维护网络环境"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />



        <ListView
            android:id="@+id/my_list"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </ListView>
        <android.opengl.GLSurfaceView
            android:id="@+id/my_slview"
            android:background="@drawable/glview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="#EBEBEB"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/fasong"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/jietu"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <EditText
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/editshape"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/editText" />

        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:text="搜索"
            android:background="@drawable/hometexthape"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>