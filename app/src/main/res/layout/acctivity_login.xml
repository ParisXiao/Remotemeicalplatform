<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_marginTop="60dp"
    android:layout_marginBottom="70dp"
    android:layout_gravity="center_horizontal"
    android:src="@mipmap/logo"
    android:layout_width="200dp"
    android:layout_height="60dp" />

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:id="@+id/lg_username"
            android:text="账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/lg_ed_username"
            android:background="@null"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:gravity="left|center_vertical"
            android:hint="用户名/手机号"
            android:layout_toRightOf="@+id/lg_username"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/lg_line1"
            android:background="@color/line"
            android:layout_below="@+id/lg_ed_username"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:textColor="@color/black"
            android:layout_below="@id/lg_line1"
            android:layout_marginTop="10dp"
            android:id="@+id/lg_password"
            android:text="密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_toRightOf="@+id/lg_username"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_below="@id/lg_line1"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:gravity="left|center_vertical"
            android:hint="请填写密码"
            android:id="@+id/lg_ed_password"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <CheckBox
            android:id="@+id/lg_radio"
            android:checked="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:text="记住密码，90天内登录免验证"
            android:layout_below="@+id/lg_ed_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lg_tv_login"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="登录"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/hometext2hape"
        android:layout_below="@+id/lg_radio"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/lg_tv_login"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/logtext"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/lg_registered"
                android:layout_below="@+id/lg_tv_login"
                android:text="注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/logtext"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/lg_registered"
                android:id="@+id/lg_back"
                android:layout_below="@+id/lg_tv_login"
                android:text="找回密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lg_ed_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView5" />
    </RelativeLayout>
</LinearLayout>