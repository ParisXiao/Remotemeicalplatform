<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <include
        layout="@layout/layout_actionbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_write"
                >
                <TextView
                    android:id="@+id/yizhudetails_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:text="@string/yizhuneirou"
                    android:textColor="@color/background_green"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/margin"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_fgx"
                    android:layout_below="@+id/yizhudetails_content_text"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_write"
                >
                <TextView
                    android:id="@+id/yizhudetails_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:text="多多休息"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_write"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:text="@string/yizhuID"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/margin"
                    />
                <TextView
                    android:id="@+id/yizhudetails_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:textColor="@color/text_black"
                    android:text="155151515"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_fgx"
                    android:layout_below="@+id/yizhudetails_ID"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_write"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:text="@string/kaizhuyisheng"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/margin"
                    />
                <TextView
                    android:id="@+id/yizhudetails_yisheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:textColor="@color/text_black"
                    android:text="肖某某"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_fgx"
                    android:layout_below="@+id/yizhudetails_yisheng"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_write"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:text="@string/kaishishijian"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/margin"
                    />
                <TextView
                    android:id="@+id/yizhudetails_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:textColor="@color/text_black"
                    android:text="2018-03-03"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_fgx"
                    android:layout_below="@+id/yizhudetails_starttime"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_write"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:text="@string/qixiao"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/margin"
                    />
                <TextView
                    android:id="@+id/yizhudetails_qixiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:textColor="@color/text_black"
                    android:text="长期"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_fgx"
                    android:layout_below="@+id/yizhudetails_qixiao"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_write"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:text="@string/pinlv"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/margin"
                    />
                <TextView
                    android:id="@+id/yizhudetails_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:textColor="@color/text_black"
                    android:text="持续"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_fgx"
                    android:layout_below="@+id/yizhudetails_pl"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_write"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:text="@string/fuwujigou"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/margin"
                    />
                <TextView
                    android:id="@+id/yizhudetails_jigou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:textColor="@color/text_black"
                    android:text="重庆大药房"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_fgx"
                    android:layout_below="@+id/yizhudetails_jigou"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_write"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:text="@string/kaizhushijian"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/margin"
                    />
                <TextView
                    android:id="@+id/yizhudetails_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize"
                    android:textColor="@color/text_black"
                    android:text="2018-03-03"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_fgx"
                    android:layout_below="@+id/yizhudetails_time"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>