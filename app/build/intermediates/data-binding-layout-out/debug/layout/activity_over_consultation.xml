<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colortitle"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="结束咨询"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_wait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/oc_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="您选择的是"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/oc_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/oc_tv1"
                android:textColor="@color/hometextcoler" />

            <TextView
                android:id="@+id/oc_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oc_tv1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="你前面还有"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/oc_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oc_tv2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/oc_tv3"
                android:textColor="@color/hometextcoler" />

            <TextView
                android:id="@+id/oc_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oc_tv2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/oc_tv4"
                android:text="人在排队，等待时间约"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/oc_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oc_tv2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/oc_tv5"
                android:textColor="@color/hometextcoler" />

            <TextView
                android:id="@+id/oc_tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oc_tv2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/oc_tv6"
                android:text="分钟。"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/oc_tv8"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/oc_tv2"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/oc_tv7"
                android:background="@drawable/hometext5hape"
                android:gravity="center"
                android:text="取消申请"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/oc_tv9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oc_tv3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/hometextcoler" />

            <TextView
                android:id="@+id/oc_tv10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oc_tv3"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/oc_tv9"
                android:text="呼叫您进入网络诊疗室"
                android:textColor="@color/black" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/lin2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/oc_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editshape5"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_dotor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@+id/oc_img"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/oc_tv11"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/clicklook" />

            <TextView
                android:id="@+id/tv_prescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_marginTop="23dp"
                android:layout_toLeftOf="@+id/oc_tv11"
                android:text="您的用药建议来了，点击查看"
                android:textColor="@color/red"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <android.opengl.GLSurfaceView
                android:id="@+id/glview_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/jiankang1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看档案"
                    android:textColor="@color/hometextcoler" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"></LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/lin2" />

        <ListView
            android:id="@+id/lv_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#00000000"
            android:dividerHeight="0dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#EBEBEB"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_send_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/fasong" />

            <ImageView
                android:id="@+id/iv_screenshot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/jietu" />


            <EditText
                android:id="@+id/editText2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/editshape"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_sned"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/hometexthape"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>