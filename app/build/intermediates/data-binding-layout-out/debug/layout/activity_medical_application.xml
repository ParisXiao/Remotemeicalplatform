<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colortitle"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginRight="60dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="医疗申请"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
       <LinearLayout
           android:gravity="center_horizontal"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent">
         <TextView
             android:id="@+id/tv_doctor_on_line"
             android:textColor="@color/white"
             android:gravity="center"
             android:text="在线医生"
             android:background="@drawable/hometext4hape"
             android:layout_width="80dp"
             android:layout_height="25dp" />
       </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_doctor_no_line"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="离线医生"
                android:background="@drawable/hometext4hape"
                android:layout_width="80dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_doctor_all"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="全部"
                android:background="@drawable/hometext4hape"
                android:layout_width="80dp"
                android:layout_height="25dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="@color/lin2"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_search"
            android:paddingLeft="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editshape4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_search"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="搜索"
            android:background="@drawable/hometext4hape"
            android:layout_width="50dp"
            android:layout_height="30dp" />


        <Spinner
            android:padding="0dp"
            android:background="@drawable/editshape2"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/spinner2"
            />


    </LinearLayout>

    <TextView
        android:background="@color/lin2"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <ListView
        android:id="@+id/medical_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </ListView>
    <TextView
        android:id="@+id/apply"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="申请咨询"
        android:background="@drawable/hometext5hape"
        android:layout_below="@+id/lg_radio"
        android:layout_width="250dp"
        android:layout_height="35dp" />
</LinearLayout>