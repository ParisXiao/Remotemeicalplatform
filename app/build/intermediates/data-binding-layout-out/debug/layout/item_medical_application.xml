<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="101dp">

    <TextView

        android:id="@+id/tv_1"
        android:textColor="@color/hometextcoler"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_n4"
        android:layout_alignStart="@+id/tv_n4" />

    <TextView

        android:id="@+id/tv_n3"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/tv_n2"
        android:layout_below="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/tv_n4"
        android:textSize="12dp"
        android:layout_marginLeft="30dp"
        android:text="科室："
        android:layout_toRightOf="@+id/doc_img"
        android:layout_below="@+id/tv_n2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/doc_img"
        android:background="@color/lin2"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/rl_ll"
        android:layout_width="70dp"
        android:layout_height="101dp"
        android:layout_alignParentRight="true"
        >

        <TextView
            android:id="@+id/tv_7"
            android:textColor="@color/hometextcoler"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_pandui"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv_7"
            android:text="排队"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_n6"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="选择"
            android:background="@drawable/hometext4hape"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/doc_img"
        android:layout_marginLeft="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:riv_oval="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />



    <TextView
        android:id="@+id/tv_n2"
        android:textSize="12dp"
        android:text="职称："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_n3"
        android:layout_alignBottom="@+id/tv_n3"
        android:layout_alignLeft="@+id/tv_1"
        android:layout_alignStart="@+id/tv_1" />

    <TextView
        android:layout_toLeftOf="@+id/rl_ll"
        android:id="@+id/tv_n5"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_n4"
        android:layout_alignBottom="@+id/tv_n4"
        android:layout_toRightOf="@+id/tv_n4"
        android:layout_marginRight="10dp"
    />

</RelativeLayout>