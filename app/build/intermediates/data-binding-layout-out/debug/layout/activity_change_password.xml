<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colortitle"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginRight="60dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="修改密码"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:src="@mipmap/logo"
        android:layout_width="120dp"
        android:layout_height="60dp" />

    <TextView
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:text="修改密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:id="@+id/pass_username"
            android:text="用户名："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pass_ed_username"
            android:layout_toRightOf="@+id/pass_username"
            android:background="@null"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/pass_line1"
            android:background="@color/line"
            android:layout_below="@+id/pass_ed_username"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/pass_pihon"
            android:layout_below="@+id/pass_line1"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:text="手机号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pass_ed_pihon"
            android:layout_below="@+id/pass_line1"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/pass_pihon"
            android:layout_width="160dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/pass_phion_validation"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/hometext3hape"
            android:text="获取验证码"
            android:layout_below="@id/pass_line1"
            android:layout_toRightOf="@+id/pass_ed_pihon"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/pass_line2"
            android:background="@color/line"
            android:layout_below="@+id/pass_phion_validation"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/pass_ed_validation"
            android:background="@null"
            android:textSize="15dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/pass_line2"
            android:layout_toRightOf="@+id/pass_validation"
            android:layout_toEndOf="@+id/pass_validation" />

        <TextView
            android:id="@+id/pass_line3"
            android:background="@color/line"
            android:layout_below="@+id/pass_ed_validation"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_re_number2"
            android:layout_below="@id/pass_line2"
            android:layout_toRightOf="@+id/pass_ed_validation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/red"
                android:id="@+id/re_number"
                android:gravity="center"
                android:text="还有"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/red"
                android:id="@+id/re_number11"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/red"
                android:id="@+id/re_number3"
                android:gravity="center"
                android:text="秒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView

            android:layout_below="@+id/pass_line3"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:id="@+id/new_passworld"
            android:text="新密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/new_ed_passworld"
            android:inputType="textPassword"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/pass_line3"
            android:layout_toRightOf="@+id/new_passworld"
            android:background="@null"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/pass_line4"
            android:background="@color/line"
            android:layout_below="@+id/new_ed_passworld"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView

            android:layout_below="@+id/pass_line4"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:id="@+id/new_passworld_ok"
            android:text="确认新密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/new_ed_passworld_ok"
            android:inputType="textPassword"
            android:layout_below="@+id/pass_line4"
            android:layout_toRightOf="@+id/new_passworld_ok"
            android:background="@null"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/pass_line5"
            android:background="@color/line"
            android:layout_below="@+id/new_ed_passworld_ok"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/pass_validation"
            android:textColor="@color/black"
            android:text="手机验证码："
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pass_line3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <TextView
        android:id="@+id/re_tv_registered"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="修改密码"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/hometext2hape"
        android:layout_below="@+id/lg_radio"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
</LinearLayout>