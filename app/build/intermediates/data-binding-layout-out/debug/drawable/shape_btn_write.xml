<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 第一层  上部和左部偏移一定距离-->

<item
    android:left="2dp"
    android:top="2dp">
    <shape>
        <solid android:color="@color/healthManager_shadow" />
        <!-- 描边 -->
        <corners
            android:radius="5dp"
            />
    </shape>
</item>
    <!-- 第二层 下部和有部偏移一定距离-->
<item
android:bottom="2dp"
android:right="2dp">
<shape>
    <solid android:color="@color/background_write" />
    <!-- 描边 -->
    <corners
        android:radius="5dp"
        />

</shape>
</item>

    </layer-list>